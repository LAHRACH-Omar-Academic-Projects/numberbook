<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:id="@+id/dialog_layout"
    android:paddingHorizontal="35dp"
    android:gravity="center"
    tools:context=".ui.components.ViewDialog">

    <ImageView
        android:id="@+id/tower"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/signal"
        app:tint="@color/gray"/>

    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Impossible d'envoyer le numéro de téléphone"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/description_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veuillez vérifier votre connexion et réessayer."
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_dialog"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/white"
        app:cornerRadius="5dp"
        app:rippleColor="@color/blue"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp"
        android:text="Réessayer"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal" />

</LinearLayout>